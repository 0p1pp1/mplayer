include ../config.mak

LIBNAME = libvidix.a

SRCS    = vidixlib.c
OBJS	= $(SRCS:.c=.o)

CFLAGS  = $(OPTFLAGS)

all:	$(LIBNAME)
	$(MAKE) -C drivers

$(LIBNAME):	$(OBJS)
	$(AR) r $@ $^
	$(RANLIB) $@

clean:
	rm -f *.o *.a *~
	$(MAKE) -C drivers clean

distclean: clean
	rm -f .depend test
	$(MAKE) -C drivers distclean

dep depend:
	$(CC) -MM $(CFLAGS) $(SRCS) 1>.depend
	$(MAKE) -C drivers depend

-include .depend
