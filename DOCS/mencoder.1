.SH NAME
mencoder \- Movie Encoder for Linux
.SH SYNOPSIS
.B mencoder
.RB [ \-vcd\ <track\ number> ]
.RB [ \-dvd\ <titleid> ]
.RB [ \-chapter\ <chapterid> ]
.RB [ \-dvdangle\ <angleid> ]
.RB [ \-dvdkey\ <key> ]
.RB [ \-nobps ]
.RB [ \-aid\ <id> ]
.RB [ \-vid\ <id> ]
.RB [ \-pp\ <quality> ]
.RB [ \-vc\ <video\ codec\ name> ]
.RB [ \-ac\ <audio\ codec\ name> ]
.RB [ \-vfm\ <video\ codec\ family> ]
.RB [ \-afm\ <audio\ codec\ family> ]
.RB [ \-include\ <configfile> ]
.RB [ \-mc\ seconds/5f ]
.RB [ \-v ]
