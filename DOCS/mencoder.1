.RB [ \-vid\ <id> ]
.RB [ \-pp\ <quality> ]
.RB [ \-vc\ <video\ codec\ name> ]
.RB [ \-ac\ <audio\ codec\ name> ]
.RB [ \-vfm\ <video\ codec\ family> ]
.RB [ \-afm\ <audio\ codec\ family> ]
.RB [ \-include\ <configfile> ]
.RB [ \-v ]
.RB [ \-mp3file\ <filename> ]
.RB [ \-ac3file\ <filename> ]
